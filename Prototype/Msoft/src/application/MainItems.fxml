<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <Label text="Username" />
            <TextField alignment="CENTER" maxWidth="-Infinity" prefWidth="200.0" promptText="Username" />
            <Label text="Password" />
            <PasswordField alignment="CENTER" maxWidth="-Infinity" prefWidth="200.0" promptText="Password" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="loginButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#login" prefWidth="100.0" text="Login" />
                  <Button fx:id="closeButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#closeWindow" prefWidth="100.0" text="Logout" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
